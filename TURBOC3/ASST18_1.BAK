int Calc(int a, int b, char op){
  int v;
  switch (op){
     case '+' : v=a+b;break;
     case '-' : v=a-b;break;
     case '*' : v=a*b;break;
     case '/' : v=a/b;break;
     default: cout<<"Incorrect answer";break;
  }
  return v;
}

